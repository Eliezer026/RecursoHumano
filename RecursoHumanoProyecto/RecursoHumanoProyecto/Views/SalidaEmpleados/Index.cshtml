@model IEnumerable<RecursoHumanoProyecto.Models.SalidaEmpleado>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table id="Tableid" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoSalida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Motivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaSalaida)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Empleados.Nombre)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoSalida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Motivo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaSalaida)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Empleados.Nombre)
                </td>
                <td>
                    <a class="btn btn-primary" href="~/SalidaEmpleados/Edit/@item.Id">Editar</a>
                    <a class="btn btn-info" href="~/SalidaEmpleados/Details/@item.Id">Detalles</a>
                    <a class="btn btn-danger" href="~/SalidaEmpleados/Delete/@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </thead>
</table>