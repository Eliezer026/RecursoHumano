@model IEnumerable<RecursoHumanoProyecto.Models.Cargo>

@{
    ViewBag.Title = "Index";
}

<h2>Lista Cargos</h2>

<p>
   
</p>
<table id="Tableid" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CargoEmpleado)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CargoEmpleado)
                </td>
                <td>
                    <a class="btn btn-primary" href="~/Cargos/Edit/@item.Id">Editar</a>
                    <a class="btn btn-info" href="~/Cargos/Details/@item.Id">Detalles</a>
                    <a class="btn btn-danger" href="~/Cargos/Delete/@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </thead>
</table>
